{
    "compilerOptions": {
      "target": "ES2019",
      "module": "CommonJS",
      "lib": ["ES2019"],
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "declaration": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  